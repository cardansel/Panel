@model IEnumerable<Layer_Support.Entity.Category>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row g-3">
                        <div class="col">
                           <h3><i class="fa-solid fa-cat"></i>&nbsp;Listado de Categorias</h3>
                        </div>
                        <div class="col">
                            <a href=" @Url.Action("Create")" class="btn btn-outline-secondary" style="float:right;">Nuevo Registro &nbsp;<i class="fa-solid fa-comment-plus"></i></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Category_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category_Desc)
                            </th>

                            <th colspan="3"></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category_Desc)
                                </td>

                                <td width="10px">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                </td>
                                <td width="10px">
                                   <a href="@Html.Action("Details", new { id = item.Id })" class="btn btn-outline-info"><i class="fa-solid fa-circle-info"></i></a>
                                </td>
                                <td width="10px">
                                    <a href="@Html.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger"><i class="fa-solid fa-trash-can"></i></a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>